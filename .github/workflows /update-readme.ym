name: Update README

on:
  schedule: # execute every 12 hours
    - cron: "* */12 * * *"
  push:
    branches:
      - main

jobs:
  update-readme:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v2
      - name: Set up Node.js
        uses: actions/setup-node@v2
        with:
          node-version: '14'
      - run: npm install -g @actions/github-script
      - run: |
          github-scripts update-readme.js
